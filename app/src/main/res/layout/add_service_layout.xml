<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddServiceActivity"
    android:background="@color/background">

    <!--android:src="@drawable/photo_placeholder"-->

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="1dp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="15sp"
        android:gravity="center_horizontal"
        android:text="Enter service name"
        android:textColor="#0f0f0f"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/service_name_input"
        android:layout_width="214dp"
        android:layout_height="52dp"
        android:layout_below="@id/textView11"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="107dp"
        android:gravity="center"
        android:hint="Service name"
        android:maxWidth="250sp"
        android:maxLines="4"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_name_input"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="15sp"
        android:gravity="center_horizontal"
        android:text="Enter description"
        android:textColor="#0f0f0f"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.389"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/service_name_input" />

    <EditText
        android:id="@+id/service_description_input"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:layout_below="@id/textView12"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="107dp"
        android:gravity="center"
        android:hint="Service name"
        android:maxWidth="250sp"
        android:maxLines="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_description_input"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="15sp"
        android:gravity="center_horizontal"
        android:text="Enter cost"
        android:textColor="#0f0f0f"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_duration_input" />

    <EditText
        android:id="@+id/service_cost_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView14"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="107dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Cost"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_cost_input"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="15sp"
        android:gravity="center"
        android:text="Enter time duration"
        android:textColor="#0f0f0f"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/service_description_input" />

    <EditText
        android:id="@+id/service_duration_input"
        android:layout_width="212dp"
        android:layout_height="54dp"
        android:layout_below="@id/textView13"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="98dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Duration"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_duration_input"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="15sp"
        android:gravity="center"
        android:text="Enter image url"
        android:textColor="#0f0f0f"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_cost_input" />

    <EditText
        android:id="@+id/service_url_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView16"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="99dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Image URL"
        android:inputType="textUri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <Button
        android:id="@+id/save_service_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_url_input"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="158dp"
        android:text="Save" />

</RelativeLayout>