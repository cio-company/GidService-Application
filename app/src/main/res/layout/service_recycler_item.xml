<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="4dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/service_recycler_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/picture"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/service_recycler_name"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="25dp"
                android:layout_toEndOf="@id/service_recycler_image"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="Name"
                android:textColor="#000" />

            <TextView
                android:id="@+id/service_recycler_timeDuration"
                android:layout_width="47dp"
                android:layout_height="17dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="248dp"
                android:layout_marginTop="51dp"
                android:layout_marginEnd="25dp"
                android:layout_toEndOf="@id/service_recycler_image"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="time"
                android:textColor="@color/navyBlue" />

            <TextView
                android:layout_width="93dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="204dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="7dp"
                android:layout_toEndOf="@id/service_recycler_image"
                android:textSize="10sp"
                android:gravity="center"
                android:text="Duration time"
                android:textColor="#000" />

            <TextView
                android:id="@+id/service_recycler_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/service_recycler_name"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="110dp"
                android:layout_toEndOf="@id/service_recycler_image"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="7sp"
                android:autoSizeTextType="uniform"
                android:text="Description"
                android:textColor="#000" />

            <TextView
                android:id="@+id/service_recycler_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="14dp"
                android:text="Cost"
                android:textColor="@color/brightYellow"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>