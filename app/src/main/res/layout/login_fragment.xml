<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="110sp"
        android:fontFamily="@font/ubuntu_light"
        android:text="Login"
        android:textColor="@color/secondaryTextColor"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/phone_login_field"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35sp"
        android:background="@drawable/registration_input_filed"
        android:gravity="center"
        android:hint="Phone or E-mail" />

    <EditText
        android:id="@+id/password_login_field"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/registration_input_filed"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/open_register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:fontFamily="@font/ubuntu_light"
        android:gravity="center"
        android:text="Don't have an account? Create now!"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25sp">

        <ImageButton
            android:id="@+id/login_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/next_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8sp"
            android:fontFamily="@font/ubuntu_light"
            android:text="Log in"
            android:textColor="@color/primaryTextColor"
            android:textFontWeight="600"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/login_next_button"
            app:layout_constraintEnd_toEndOf="@+id/login_next_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/login_next_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>