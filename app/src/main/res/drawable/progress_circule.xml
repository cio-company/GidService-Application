<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-90"
    android:toDegrees="270"
    android:pivotY="50%"
    android:pivotX="50%">

    <shape android:useLevel="false"
        android:shape="ring">
        <gradient
            android:endColor="@color/quantum_lightblue"
            android:startColor="@color/quantum_lightblue"
            android:centerColor="@color/secondaryColor"
            android:type="sweep"
            android:useLevel="false"/>
    </shape>



</rotate>